<!DOCTYPE html>
<html>
  <head>
    <title>Online Receptionaist</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application",cache: true %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/chartkick@latest" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" %>


  </head>
  <body class="nav-md">
    <%if user_signed_in?%>
      <div class="container body">
        <div class="main_container">
          <%= render 'layouts/shared/navbar' %>
          <%= render 'layouts/shared/sidebar' %>

          <div class="right_col" role="main" style="height: 100vh;">
            <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
              <% flash.each do |type, msg| %>
                <% if type == "notice" %>
                  <div class="alert alert-success">
                <% elsif type == "alert" %>
                  <div class="alert alert-danger">
                <% else %>
                  <div class='alert alert-<%= "#{type}" %>'>
                <% end %>
                <a href="#" class="close" data-dismiss="alert">&#215;</a>
                <ul>
                  <li>
                    <%= msg %>
                  </li>
                </ul>
                </div>
              <% end %>
            </div>
          </div> 
              <%= yield %>
            </div>
          <%= render 'layouts/shared/footer' %>
        </div>
      </div>
      <%else%>
      <div class="right_col" role="main" style='background-color:white; height: 100vh;'>
          <td class="notice"><%= notice %></td>
          <td class="alert"><%= alert%></td>
        <%= yield %>
      </div>
    <%end%>
  </body>

</html>
