<div class="container">
    <div class="col-md-8 col-md-offset-2">
      <div class="x_panel">
        <div class="x_title">
        </div>
          <h2>Sign up</h2>
        <div class="x_content">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
     <label class="form-label" for="form2Example1">Email address</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
  </div>

  <div class="field">
    <label class="form-label" for="form2Example2">Password</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control"  %>
  </div>

  <div class="field">
    <label class="form-label" for="form2Example2">password confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="field">
    <label class="form-label" for="form2Example2">Phone</label>
 <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", class: "form-control", placeholder: "Enter mobile number",required: true %>
    </div>


  <div class="field">
    <label class="form-label" for="form2Example2">Register As</label>
       <%= f.select(:role_ids, Role.all.collect {|p| [ p.name, p.id] },  {prompt: "Select Role"},{class: 'form-control'}) %>
    </div>

</br>
  <div class="actions">
    <%= f.submit "Sign up" ,class:"btn btn-primary btn-block mb-4" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
  </div>
      </div>
    </div>
  </div>

